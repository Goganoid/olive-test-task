{
  "compilerOptions": {
    "target": "ESNext",                                 
    "module": "Node16",        
    "moduleResolution": "node16",                           
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,   
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, 
    "strictPropertyInitialization": false,                             
    "outDir": "./dist/",
    "rootDir": "./src/"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}